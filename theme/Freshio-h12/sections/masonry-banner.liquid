                  {%- endif -%}
                </figcaption>		
                {%- if block.settings.button_link != blank -%}
                <a href="{{block.settings.button_link}}"></a>
                {%- endif -%}
              </figure>
            {%- endcase -%}
          <style>
            .grid-item-{{block.id}}{width:{{block.settings.width}}%}
