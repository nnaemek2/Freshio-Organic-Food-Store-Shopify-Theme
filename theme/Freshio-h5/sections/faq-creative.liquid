<!-- faq-section.liquid -->
<style>
   .customstyle{{ section.id }}{ 
      position: relative;
      z-index: {{section.settings.zindex}};
      background-position:{{section.settings.e_pos}} !important;
      background-repeat:{{ section.settings.e_repeat }} !important;
      background-size:{{ section.settings.e_size }} !important;
    }
    .card-faqs{
       
        border-bottom: 1px solid #ebebeb;
        padding:1.25em 0;
    }
    .card-faqs:first-child{
        border-top:1px solid #ebebeb;
    }
    .card-faqs-heading{
        cursor: pointer;
    }
    .faq-heading .faq-icon{
        display: inline-block;
        width: 40px;
        height: 40px;
        line-height: 32px;
        font-size: 18px;
        background: #fff;
        border: 1px solid  var(--g-main);
        text-align: center;
        border-radius: 100%;
        background-color: var(--g-main);
        transform: rotate(-90deg);
    }
    .faq-heading.collapsed .faq-icon{
        border: 1px solid #e3e3e3;
        background-color: transparent;
        transform: rotate(0deg);
    }
    .accordion-2 .card-faqs{
      padding:1.25em;
      margin-bottom:16px;
      border-color: transparent;
      background-color: white;
      
    }
</style>
  <div class="customstyle{{ section.id }} {% if section.settings.image_bg != blank %} lazyload {% endif %}" data-aos="{{section.settings.animation}}"  
  style="{% if section.settings.image_bg != blank %}background-image:url({%- include 'srcBlank' -%}){% endif %}"
  data-bg="{{ section.settings.image_bg | img_url:"1920x" }}"
  >
  {%- include 'style-section' -%}
    <div class="{{ section.settings.setwidth }}">
      <div class="section-block  section-inner">
        {%- include 'section-heading' -%}
        <div class="row {% if section.settings.e_reverse %} flex-row-reverse {% endif %}">
            <div class="col-md-6 col-12" data-aos="{{section.settings.animation}}" data-aos-duration="500">
                {%- if section.settings.left_html != blank -%}
                    <div class="mb-5 {% if section.settings.e_reverse %} pl-lg-5 ml-lg-3 {% else %} pr-lg-5 mr-lg-3  {% endif %}">
                        {{section.settings.left_html}}
                    </div>
                {%- endif -%}
                {%- if section.blocks.size > 0 -%}
                    <div id="accordion-faqs" class="{{section.settings.s_accordion}} {% if section.settings.e_reverse %} pl-lg-5 ml-lg-3 {% else %} pr-lg-5 mr-lg-3  {% endif %} mb-5 mb-lg-0">
                    {%- for block in section.blocks -%}
                        <div class="card-faqs">
                            <div class="card-faqs-heading" >
                                <h5 class="mb-0">
                                    <span class="faq-heading d-flex align-items-center {% if forloop.first %}{% else %}collapsed{% endif %}" data-toggle="collapse" data-target="#faq-{{block.id}}" aria-expanded="{%- if forloop.first -%}true{%- else -%}false{%- endif -%}" aria-controls="faq-{{block.id}}">
                                        <span class="faq-icon mr-3">
                                        <i class="freshio-icon- freshio-icon-angle-down"></i>
                                        </span>
                                        {{block.settings.faq_title}}
                                    </span>
                                </h5>
                            </div>
                            <div id="faq-{{block.id}}" class="pl-2 collapse {% if forloop.first %}show{% endif %}" aria-labelledby="headingOne" data-parent="#accordion-faqs">
                                <div class="card-body pl-5">
                                    {{block.settings.faq_des}}
                                </div>
                            </div>
                        </div>
                    
                    {%- endfor -%}
                </div>
                {%- endif -%}
            </div>
            <div class="col-12 col-md-6" data-aos="{{section.settings.animation}}" data-aos-duration="800">
                {% if section.settings.e_right %}
                {%- if section.settings.image_right == blank -%}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- else -%}
                <div class="position-relative">
                    <div class="image-content__image-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.image_right.aspect_ratio | times: 100}}%;">
                    {% assign img_url = section.settings.image_right | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                    <img class="image-content__image lazyload"
                        src="{{ section.settings.image_right | img_url: '800x' }}"
                        data-src="{{ img_url }}"
                        data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                        data-aspectratio="{{section.settings.image_right.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ section.settings.image_right.title }}">
                    </div>
                </div>
              {%- endif -%}
              {%- endif -%}
            </div>
        </div>
        {%- if section.blocks.size == 0 -%}
        {%- include 'no-blocks' -%}
        {%- endif -%}
      </div>
    </div>
  </div>
  
