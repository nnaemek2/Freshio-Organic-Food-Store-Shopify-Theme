    .slideshow__text-content::after {
      content: '';
      content: '';
      display: block;
      width: 40px;
      height: 40px;
      position: absolute;
      margin-left: -20px;
      margin-top: -20px;
      border-radius: 50%;
      border: 3px solid #fff;
      border-top-color: transparent;
      -webkit-animation: spin .65s infinite linear;
      animation: spin .65s infinite linear;
