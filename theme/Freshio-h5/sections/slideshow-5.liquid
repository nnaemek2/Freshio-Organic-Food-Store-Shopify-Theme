      .slideshow__text-content::after {
        content: none;
      }
    }
    
    .no-js .slideshow__text-content::after,.slick-initialized .slideshow__text-content::after {
      opacity: 0;
      visibility: hidden;
      content: none;
    }
    
    @media (min-width:750px) {
      .slideshow__text-content--mobile {
        display: none!important;
      }
    }
    
