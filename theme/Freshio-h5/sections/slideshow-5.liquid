      background:{{section.settings.color_dot_active}};
      border-color:{{section.settings.color_dot_active}};
    }
    .slideshow .slick-dots li.slick-active button{
      border-color:{{section.settings.color_dot_active}};
      background:{{section.settings.color_dot_active}};
    }
    
