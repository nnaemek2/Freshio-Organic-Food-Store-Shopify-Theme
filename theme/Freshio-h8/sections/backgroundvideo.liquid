<div class="customstyle{{ section.id }} " data-aos="{{section.settings.animation}}">
    {%- include 'style-section' -%}
  <style>
    .bgvideo-{{ section.id }} {padding: {{section.settings.padding_desktop}}px 0;}@media (max-width:991px){.bgvideo-{{ section.id }} {padding: {{section.settings.padding_mobile}}px 0;}}
    .bgvideo-{{ section.id }}::before{
        content:"";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
        background-color: {{section.settings.bg_overlay}};
      opacity: {{section.settings.opacity_bg_overlay}};
    }
    .bgvideo-{{ section.id }} .parallax-banner__meta::before{
    background-color: {{section.settings.bg_box}};
    opacity: {{section.settings.opacity_bgbox}};
  }
    </style>
  <div class="{{ section.settings.setwidth }}">
  <div class="section-block"  >
    <div class=" bgvideo-{{ section.id }}  txt-{{section.settings.align}} bg-herovideo" data-section-id="{{ section.id }}" data-section-type="background-video" >
        {% if section.settings.link_video != blank %}
        <div class="hero-video">
         <video id="Mp4{{ section.id }}" src="{{section.settings.link_video}}" loop="" muted="" playsinline="" autoplay="" ></video>
        </div>
        {% else if %}
        <div class="hero-video">
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
        {% endif %}
      <div class="parallax-banner__meta bg-herovideo-meta">
        {%- if section.settings.title != blank -%}
        <h4 class="parallax-banner__title pb-4" style="color:{{section.settings.title_color}}">
          {{section.settings.title}}
        </h4>
        {%- endif -%}
  
        {%- if section.settings.subtext != blank -%}
        <div class="m-0 pb-5" style="color:{{section.settings.subtitle_color}}">
          {{section.settings.subtext}}
        </div>
        {%- endif -%}
  
        {%- if section.settings.button != blank and section.settings.link != blank -%}
        <div class="parallax-banner__btn">
          <a href="{{ section.settings.link }}" class="btn btn-theme gradient-theme">
            {{ section.settings.button | escape }}
          </a>
        </div>
        {%- endif -%}
      </div>
    </div>
  </div>
  </div>
  </div>
