<!-- footer-2.liquid -->
<div class="footer-container">  	
  {%- if section.settings.footertop_enable -%}
  <section class="footer-top"> 
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-6 col-12">
          <div class="footer-top__service">
            <div class="footer-top__service-icon">
              {{ section.settings.iconleft }}
            </div>      
            <div class="footer-top__service-meta">
              <h4 class="mb-1">{{ section.settings.titleleft }}</h4>
              <p>{{ section.settings.desleft }}</p>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6 col-12">      
          <div class="footer-top__service">
            <div class="footer-top__service-icon">
              {{ section.settings.iconright }}
            </div>      
            <div class="footer-top__service-meta">
              <p class="mb-1">{{ section.settings.desright }}</p>
              <h4>{{ section.settings.titleright }}</h4>
            </div>
          </div>
        </div>
      </div>        
    </div>
  </section>  	
  {%- endif -%}
  <section class="footer-mid">
    <div class="container">
      <div class="row">                  
        <div class="col-lg-8 col-md-6 col-12 pr-lg-3">
          {%- if section.settings.contact_title != blank -%}
          <h3 class="footer-mid__title">{{section.settings.contact_title}}</h3>
          {%- endif -%}
          <div class="row">
            <div class="col footer-mid__contact-meta">
              {%- if section.settings.contact_des != blank -%}
              <p class="footer-mid__des" >{{section.settings.contact_des}}</p>
              {%- endif -%}
              <ul class="list-unstyled footer-mid__info">
                {%- if section.settings.contact_addess != blank -%}
                <li>
                  {%- include 'icon-home' -%}{{section.settings.contact_addess}}
                </li>
                {%- endif -%}
                {%- if section.settings.contact_phone != blank -%}
                <li>
                  {%- include 'icon-mobile-phone' -%}{{section.settings.contact_phone}}
                </li>
                {%- endif -%}
                {%- if section.settings.contact_mail != blank -%}
                <li>
                  {%- include 'icon-envelope' -%}{{section.settings.contact_mail}}
                </li>
                {%- endif -%}
                {%- if section.settings.contact_web != blank -%}
                <li>
                  {%- include 'icon-globe-europe' -%}{{section.settings.contact_web}}
                </li>
                {%- endif -%}
              </ul>
            </div>
            {%- if section.settings.contact_enable -%}
            <div class="col-lg-6 footer-mid__contact-form pl-lg-4">
              {%- form 'contact' -%}
              <input type="text" id="FooterContactFormName" name="contact[name]" placeholder="{{ 'contact.form.name' | t }}" value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
              <input type="email" id="FooterContactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
              <input type="tel" id="FooterContactFormPhone" name="contact[phone]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
              <textarea rows="10" id="FooterContactFormMessage" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
              <button type="submit" class="btn btn-theme gradient-theme">{{ 'contact.form.send_message' | t }}</button>

              {%- if form.posted_successfully? -%}
              <p class="form-success">
                {{ 'contact.form.post_success' | t }}
              </p>
              {%- endif -%}
              {{ form.errors | default_errors }}
              {%- endform -%}
            </div>
            {%- endif -%}
          </div>
        </div>
        <div class="col-lg-4 col-md-6 col-12 pl-lg-3">
          {%- if section.settings.linklist_title != blank -%}
          <h3 class="footer-mid__title">
            {{section.settings.linklist_title}}
          </h3>
          {%- endif -%}
          {%- if section.settings.linklist_link != blank -%}
          <div class="footer-mid__linklist">
            <ul>
              {%- for link in linklists[section.settings.linklist_link].links -%}
              <li><a href="{{link.url}}" title="{% include 'processMenuTitle' with itemName:link.title %}">{% include 'processMenuTitle' with itemName:link.title %}</a></li>
              {%- endfor -%}
            </ul>
          </div>
          {%- endif -%}
          {%- if section.settings.social_enable -%}
          <div class="footer-mid__social">
            <ul class="list--inline social-icons">
              {%- if settings.social_facebook_link != blank -%}
              <li>
                <a href="{{ settings.social_facebook_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Facebook' }}">
                  {%- include 'icon-facebook' -%}
                  <span class="icon__fallback-text">Facebook</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_twitter_link != blank -%}
              <li>
                <a href="{{ settings.social_twitter_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Twitter' }}">
                  {%- include 'icon-twitter' -%}
                  <span class="icon__fallback-text">Twitter</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_pinterest_link != blank -%}
              <li>
                <a href="{{ settings.social_pinterest_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Pinterest' }}">
                  {%- include 'icon-pinterest' -%}
                  <span class="icon__fallback-text">Pinterest</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_tumblr_link != blank -%}
              <li>
                <a href="{{ settings.social_tumblr_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Tumblr' }}">
                  {%- include 'icon-tumblr' -%}
                  <span class="icon__fallback-text">Tumblr</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_snapchat_link != blank -%}
              <li>
                <a href="{{ settings.social_snapchat_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Snapchat' }}">
                  {%- include 'icon-snapchat' -%}
                  <span class="icon__fallback-text">Snapchat</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_youtube_link != blank -%}
              <li>
                <a href="{{ settings.social_youtube_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'YouTube' }}">
                  {%- include 'icon-youtube' -%}
                  <span class="icon__fallback-text">YouTube</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_instagram_link != blank -%}
              <li>
                <a href="{{ settings.social_instagram_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Instagram' }}">
                  {%- include 'icon-instagram' -%}
                  <span class="icon__fallback-text">Instagram</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_vimeo_link != blank -%}
              <li>
                <a href="{{ settings.social_vimeo_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Vimeo' }}">
                  {%- include 'icon-vimeo' -%}
                  <span class="icon__fallback-text">Vimeo</span>
                </a>
              </li>
              {%- endif -%}
            </ul>
          </div>
          {%- endif -%}
        </div>                    
      </div>
    </div>
  </section>
  <section class="footer-bot text-center">
    <div class="footer-bot__powered py-4">
      {%- if section.settings.copyright -%}
        <p>&copy; {{ 'now' | date: "%Y" }}, <b class="text-capitalize">{{ shop.name | link_to: '/' }}</b>. {{ powered_by_link }}</p>
      {%- else -%}
        <div>{{section.settings.customcopyright}}</div>
      {%- endif -%}
      
    </div>
  </section>
</div>
