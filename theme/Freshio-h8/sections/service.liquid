              {%- endif -%}
                <h6 class="mt-0 mb-4 h4 text-uppercase" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</h6>
              <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
            </div>
          </div>
          {%- when 'style-3' -%}
          <div class="media service-3 text-center {% if section.settings.effect  %} effect-column-underline {% endif %} position-relative">
              <div class="media-body py-3" style="background-color:{{block.settings.bgblock}};">
                <div class="py-4">
                  {%- if block.settings.type_icon == 'font' -%}
                  <div class=" mb-4 iconx8" style="color:{{section.settings.iconcolor}};">
                    {{block.settings.icon | default:'[[ Icon ]]'}}
                  </div>
                  {%- else -%}
                  <div class="mb-4 mx-auto" style="width: {{section.settings.width_icon}}px">
                    {%- if block.settings.image != blank -%}
                    <img src="{%- include 'srcBlank' -%}" 
                      class="lazyload image-content__image transition" 
                      data-src="{{block.settings.image | img_url : '120x'}}" 
                      src="{{ img_url | img_url: '1x1' }}"
                      data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                      data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                      data-sizes="auto" />
                    {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                  </div>
                  {%- endif -%}
                  <h6 class="mt-0 mb-2 h4 text-uppercase" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</h6>
                <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
              </div>
            </div>
          </div>
          {%- when 'style-4' -%}
          <div class="media service-1 service-4 text-left {% if section.settings.effect  %} effect-column-underline {% endif %} position-relative" style="background-color:{{block.settings.bgblock}};">
            {%- if block.settings.type_icon == 'font' -%}
              <div class=" mr-4 iconx8" style="color:{{section.settings.iconcolor}};">
                {{block.settings.icon | default:'[[ Icon ]]'}}
              </div>
              {%- else -%}
              <div class="mr-4" style="width: {{section.settings.width_icon}}px">
                {%- if block.settings.image != blank -%}
                <img src="{%- include 'srcBlank' -%}" 
                  class="lazyload image-content__image transition" 
                  data-src="{{block.settings.image | img_url : '120x'}}" 
                  src="{{ img_url | img_url: '1x1' }}"
                  data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                  data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                  data-sizes="auto" />
                {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              {%- endif -%}
            <div class="media-body">
              <h6 class="mt-0 mb-2 h4" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</h6>
              <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
            </div>
          </div>
          {%- when 'style-5' -%}
          <div class="media rounded p-4 service-1 text-left {% if section.settings.effect  %} effect-column-underline {% endif %} position-relative" style="background-color:{{block.settings.bgblock}};">
            {%- if block.settings.type_icon == 'font' -%}
            <div class=" mr-4 iconx8" style="color:{{section.settings.iconcolor}};">
              {{block.settings.icon | default:'[[ Icon ]]'}}
            </div>
            {%- else -%}
            <div class="mr-4" style="width: {{section.settings.width_icon}}px">
              {%- if block.settings.image != blank -%}
              <img src="{%- include 'srcBlank' -%}" 
                class="lazyload image-content__image transition" 
                data-src="{{block.settings.image | img_url : '120x'}}" 
                src="{{ img_url | img_url: '1x1' }}"
                data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                data-sizes="auto" />
              {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            {%- endif -%}
            <div class="media-body">
              <h6 class="mt-0 mb-2 h4" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</h6>
              <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
            </div>
          </div>
          {%- endcase -%}
        </div>
        {%- endfor -%}
      </div>
      {% if e_left %}
        </div>
      {% endif %}
    </div>
    {%- if section.blocks.size == 0 -%}
    {%- include 'no-blocks' -%}
    {%- endif -%}
  </div>
</div>
</div>

