<style>
  .customstyle{{ section.id }}{
    position: relative;
    z-index: {{section.settings.zindex}};
    background-position:{{section.settings.e_pos}} !important;
    background-repeat:{{ section.settings.e_repeat }} !important;
    background-size:{{ section.settings.e_size }} !important;
  }
  .media .iconx8 i, .media .iconx8 .icon,.media .iconx8 [class^=icon-]{
    width: {{section.settings.width_icon}}px;
    height:{{section.settings.width_icon}}px;
    font-size:{{section.settings.width_icon}}px;
  }
  .media .iconx8 svg{
    width: {{section.settings.width_icon}}px;
    height:{{section.settings.width_icon}}px;
  }
  {%- if section.settings.layout == 'style-3' -%}
  @media (min-width: 991px){
      .block-sv3 .services-wrapper{
        padding: 0 90px;
      }
      .block-sv3 .services-slider{
        margin:0 -45px;
      }
      .block-sv3 .services-item{
        padding:0 45px;
      }
    }
  {%- endif -%}
  {%- if section.settings.layout == 'style-4' -%}
  .service-4{
    align-items: center;
  }
  @media (min-width: 991px){
      .service-4:before{
        content: "";
      background: rgba(0,0,0,.1);
      width: 60px;
      height: 1px;
      display: inline-block;
      vertical-align: middle;
      margin-right: 25px;
      }
  }
  {%- endif -%}
  {%- if section.settings.effect  -%}
  .customstyle{{ section.id }} .effect-column-underline:after{
    position: absolute;
    content: '';
    display: block;
    width: 50%;
    height: 3px;
    opacity: 0;
    bottom: 0;
    background-color: var(--g-color-heading);
    transition: all .3s ease;
  }
  .customstyle{{ section.id }} .effect-column-underline:hover:after{
    width: 100%;
    opacity: 1;
  }
  
  {%- endif -%}
  .customstyle{{ section.id }} .media{
    padding:{{section.settings.padding-item}};
  }
  @media (max-width: 749px){
    .customstyle{{ section.id }} .media{
      padding:{{section.settings.padding-itemmobile}};
    }
  }
</style>
<div class="customstyle{{ section.id }} {% if section.settings.layout == 'style-3' %} block-sv3 {% endif %} {% if section.settings.image_bg != blank %} lazyload {% endif %}" data-aos="{{section.settings.animation}}"
style="{% if section.settings.image_bg != blank %}background-image:url({%- include 'srcBlank' -%}){% endif %}"  
data-section-id="{{ section.id }}"  data-bg="{{ section.settings.image_bg | img_url:"1920x" }}" >
  {%- include 'style-section' -%}
<div class="{{ section.settings.setwidth }}">
  <div class="section-block section-inner">
    {%- include 'section-heading' -%}
    {% assign e_left =  section.settings.e_lefthtml  %}
    <div class="services-wrapper dots-negative {% if e_left %} row {% endif %}">
      {% if e_left %}
        <div class="col-lg-4 col-12 mb-5 mb-lg-0">
          {{ section.settings.left_blockhtml }}
        </div>
      {% endif %}
      {% assign carousel =  section.settings.enable_carousel %}
      {% if e_left %}
        <div class="col-lg-8 col-12">
      {% endif %}
      <div class="services-slider row mb-0" id="service-list-{{ section.id }}"
           data-rows="{{section.settings.rows}}"
           data-slidesToShow="{{section.blocks.size}}"
           data-slidestoscroll="{{section.blocks.size}}"
           data-arrows="{{ section.settings.arrows }}"
           data-dots="{{ section.settings.dots }}" 
           data-draggable="{{ section.settings.draggable }}" 
           data-infinite="{{ section.settings.infinite }}" 
           data-section-id="{{ section.id }}" 
           {% if carousel %}
           data-section-type="slickCarousels"
           {% endif %}>
        {%- for block in section.blocks -%}
        <div class=" {% if carousel %}  col {% else %} col-12 col-lg mb-4 mb-lg-0 {% endif %} services-item carousel__slide-wrapper--{{block.id}}" {{ block.shopify_attributes }}>
          {%- case section.settings.layout -%}
          {%- when 'style-1' -%}
          <div class="media service-1 text-left {% if section.settings.effect  %} effect-column-underline {% endif %} position-relative" style="background-color:{{block.settings.bgblock}};">
            {%- if block.settings.type_icon == 'font' -%}
            <div class=" mr-4 iconx8" style="color:{{section.settings.iconcolor}};">
              {{block.settings.icon | default:'[[ Icon ]]'}}
            </div>
            {%- else -%}
            <div class="mr-4" style="width: {{section.settings.width_icon}}px">
              {%- if block.settings.image != blank -%}
              <img src="{%- include 'srcBlank' -%}" 
                class="lazyload image-content__image transition" 
                data-src="{{block.settings.image | img_url : '120x'}}" 
                src="{{ img_url | img_url: '1x1' }}"
                data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                data-sizes="auto" />
              {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            {%- endif -%}
            <div class="media-body">
              <h6 class="mt-0 mb-2 h4" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</h6>
              <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
            </div>
          </div>
          {%- when 'style-2' -%}
          <div class="media service-2 text-center {% if section.settings.effect  %} effect-column-underline {% endif %} position-relative">
            <div class="media-body py-4" style="background-color:{{block.settings.bgblock}};">
              {%- if block.settings.type_icon == 'font' -%}
              <div class=" mb-4 iconx8" style="color:{{section.settings.iconcolor}};">
                {{block.settings.icon | default:'[[ Icon ]]'}}
              </div>
              {%- else -%}
              <div class="mb-4 mx-auto" style="width: {{section.settings.width_icon}}px">
                {%- if block.settings.image != blank -%}
                <img src="{%- include 'srcBlank' -%}" 
                  class="lazyload image-content__image transition" 
                  data-src="{{block.settings.image | img_url : '120x'}}" 
                  src="{{ img_url | img_url: '1x1' }}"
