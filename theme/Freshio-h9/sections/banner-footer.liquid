
{% if section.settings.section_footer %}
<!-- Banner-Footer.liquid -->
<div class="customstyle{{ section.id }} banner-theme-text" data-aos="{{section.settings.animation}}"  style="border-top:1px solid {{section.settings.bordertop}};border-bottom:1px solid {{section.settings.borderbottom}};">
    {%- include 'style-section' -%}
  <div class="{{ section.settings.setwidth }}">
    <div class="section-block">
      {%- include 'section-heading' -%}
      <div class="row {% if section.settings.no_gutter %}no-gutters{% endif %}">
        {%- for block in section.blocks -%}
        <style>
         .banner-{{block.id}}{
           border:1px solid {{block.settings.border_banner}};
           background-color:{{block.settings.bg_banner}};
           position:relative;
         }
         .banner-{{block.id}}:before{
           content:"";
           position: absolute;
           left:0;
           top:0;
           width: 100%;
           height: 100%;
           object-fit:cover;
           background-repeat: no-repeat;
           background-image:url("{{block.settings.bg_image}}");
           opacity: {{block.settings.opbg_banner}};
         }
        </style>
        <div class="col-md-{{block.settings.width}}" {{ block.shopify_attributes }}>
        <div class="banner-{{block.id}}" style="padding:{{block.settings.paddingblock}}">
          <figure class="position-relative m-0 hv-image-saturate text-{{block.settings.text_align}} {% if section.settings.no_gutter %}m-0{% endif %} d-flex {{block.settings.reverse}}">
            {%- if block.settings.image != blank -%}
            {%- if block.settings.button_link != blank -%}<a href="{{block.settings.button_link}}"> {%- endif -%}
            <img src="{% include 'srcBlank' %}" class="lazyload transition" data-src="{{block.settings.image | img_url:'1920x'}}">
            {%- if block.settings.button_link != blank -%}</a> {%- endif -%}
            {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
            <figcaption class="figcaption--{{block.id}} py-4">
              {%- if block.settings.description -%}
              {{block.settings.description}}
              {%- endif -%}
              {%- if block.settings.button_text != blank -%}
              <a href="{{block.settings.button_link}}" class="btn btn-theme gradient-theme">
                <span class="px-2">{{block.settings.button_text}}</span>
                {{block.settings.button_icon}}
              </a>
              {%- endif -%}
            </figcaption>		
          </figure>
          </div>
        </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
  </div>
  {% endif %}
  
