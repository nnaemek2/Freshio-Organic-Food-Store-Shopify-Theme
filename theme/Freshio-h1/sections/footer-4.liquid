      {
        "type": "text",
        "id": "newsletter_title",
        "label": "Heading",
        "default": "Be in the know"
      },
      {
        "type": "textarea",
        "id": "newsletter_subheading",
        "label": "Subheading",
        "default": "Promotions, new products and sales. Directly to your inbox."
      },
      {
        "type": "header",
        "content": "Mid footer"
      },
      {
        "type": "color",
        "id": "bordertop",
        "label": "Border Top",
        "default": "#e9e9e9"
      },
      {
        "type": "color",
        "id": "borderbot",
        "label": "Border bot",
        "default": "#e9e9e9"
      },
      {
        "type": "color",
        "id": "footermidbg",
        "label": "Background",
        "default": "#1e1e1e"
      },
      {
        "type": "color",
        "id": "footermidtext",
        "label": "Text color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "footermidlink",
        "label": "Link color",
        "default": "#999"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 300,
        "step": 5,
        "unit": "px",
        "label": "Custom logo width",
        "default": 150
      },
      {
        "type": "checkbox",
        "id": "social_enable",
        "label": "Enable social",
        "default": true
      },
      {
        "type": "header",
        "content": "Copyright"
      },
      {
        "type": "checkbox",
        "id": "copyright",
        "label": "Enable Copyright Default",
        "default": true,
        "info": "If disable you would use Custom Copyright"
      },
      {
        "type": "textarea",
        "id": "customcopyright",
        "label": "Custom Copyright",
        "default": "Â© 2021, Your Store. Powered by Shopify"
      }
  ]
}
