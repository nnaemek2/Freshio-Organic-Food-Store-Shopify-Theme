<!-- lookbook-carousel2.liquid -->
<div class="customstyle{{ section.id }}" data-aos="{{section.settings.animation}}" >
  <div class="{{ section.settings.setwidth }}">
    {%- include 'style-section' -%}
  <div class="section-block">
    {%- include 'section-heading' -%}
    <div class="lookbooks-wrapper dots-negative">
      <div class="lookbooks-slider row mb-0" id="service-list-{{ section.id }}"
           data-rows="{{section.settings.rows}}"
           data-slidesToShow="{{section.settings.show}}"
           data-slidestoscroll="{{section.settings.show}}"
           data-arrows="{{ section.settings.arrows }}"
           data-dots="{{ section.settings.dots }}" 
           data-draggable="{{ section.settings.draggable }}" 
           data-infinite="{{ section.settings.infinite }}" 
           data-section-id="{{ section.id }}" 
           data-section-type="slickCarousels">
        {%- for block in section.blocks -%}
        <div class="col lookbooks-item carousel__slide-wrapper--{{block.id}} " {{ block.shopify_attributes }}>
          <div class="position-relative {% if section.settings.hover %} hv-image-brightness {% endif %} image-content__image-wrapper" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100}}%;">
            {%- if block.settings.image != blank -%}
                <img src="{%- include 'srcBlank' -%}" 
                  class="lazyload image-content__image transition" 
                  data-src="{{block.settings.image | img_url : '1500x'}}" 
                  src="{{ img_url | img_url: '1x1' }}"
                  data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                  data-aspectratio="{{ product.featured_image.aspect_ratio }}"
                  data-sizes="auto" />
            {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
            
            {%- for i in (1..4) -%}
              {%- assign sProduct = 'product' | append:i -%}
              {%- assign sLeft = 'left' | append:i -%}
              {%- assign sTop = 'top' | append:i -%}
              {%- assign sColor = 'dot_color' | append:i -%}
              {%- if block.settings[sProduct] != blank -%}
                {%- assign productLookbook = all_products[block.settings[sProduct]] -%}
                <a data-handle="{{productLookbook.handle}}" style="left:{{block.settings[sLeft]}}%;top:{{block.settings[sTop]}}%" class="position-absolute js-btn-quickview" data-toggle="modal" data-target="#jsQuickview" data-pavailable="{% if productLookbook.available %}true{% else %}false{% endif %}" >
                  <span data-tooltip="true" title="{{productLookbook.title}}" class="lookbook__dot" style="background:{{block.settings[sColor]}}"></span>
                  {% if productLookbook.metafields.info.shortdesc != blank %}
                  <span class=" txt-short hide" >
                    {{productLookbook.metafields.info.shortdesc | strip_html | truncatewords: 8 }}
                  </span>
                {%- endif -%}
                </a>
              {%- endif -%}
            {%- endfor -%}
            
          </div>
        </div>
        {%- endfor -%}
      </div>
    </div>
    {%- if section.blocks.size == 0 -%}
    {%- include 'no-blocks' -%}
    {%- endif -%}
  </div>
</div>
</div>

