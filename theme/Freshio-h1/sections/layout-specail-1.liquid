<!-- layout-special-1.liquid -->
<div class="customstyle{{ section.id }} marsonry-2columns" >
    {%- include 'style-section' -%}
    <div class="{{ section.settings.setwidth }}">
      <div class="section-block">
        {%- include 'section-heading' -%}
        <div class="js-masonry row" data-section-id="{{ section.id }}" data-section-type="masonries" style="opacity:0">
          <div class="grid-sizer"></div>
          {%- for block in section.blocks -%}
          <div class="grid-item col-lg-6 col-12" {{ block.shopify_attributes }} data-aos="{{section.settings.animation}}" >
            {%- case block.type -%}
              {%- when 'html' -%}
                <div class="mb-5">
                {{ block.settings.code }}
              </div>
              {%- when 'banner' -%}
                <figure class=" hv-image-saturate text-{{block.settings.text_align}} mb-5 pb-5">
                  {%- if block.settings.image != blank -%}
                  <img src="{%- include 'srcBlank' -%}" class="lazyload transition img-fluid" data-src="{{block.settings.image | img_url:'960x'}}">
                  {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                  <figcaption class="figcaption--{{block.id}}">
                    {%- if block.settings.description -%}
                    {{block.settings.description}}
                    {%- endif -%}
                    {%- if block.settings.button_text != blank -%}
                    <a class="btn btn-underline" href="{{block.settings.button_link}}">
                      {{block.settings.button_text}}
                    </a>
                    {%- endif -%}
                  </figcaption>		
                </figure>
              {%- endcase -%}
          </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
  
