<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing row ">
  {% unless center_icons %}
  <div class="col col-title pr-3 col-1">
    <span class="social-sharing__title">{{ 'general.social.share_title' | t }}:</span>
  </div>
  {% endunless %}
  <div class="col {% if center_icons %}text-center{% else %}text-left{% endif %}">
    {% if settings.share_facebook %}
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" data-tooltip="true" class="social-sharing__link share-facebook" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
      {% include 'icon-facebook' %}
      <span class="share-title visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
    {% endif %}

    {% if settings.share_twitter %}
    <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" data-tooltip="true" class="social-sharing__link share-twitter" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
      {% include 'icon-twitter' %}
      <span class="share-title visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
    {% endif %}

    {% if settings.share_pinterest %}
    <a data-tooltip="true" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="social-sharing__link share-pinterest" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
      {% include 'icon-pinterest' %}
      <span class="share-title visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
    {% endif %}
  </div>
</div>
