            {% if block.settings.image != blank %}
            <img class="w-100" src="{{block.settings.image | img_url:'800x'}}" alt="{{block.settings.name | handle}}" />
            {% else %}
            {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
