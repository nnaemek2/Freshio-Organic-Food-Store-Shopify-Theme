  .smember--style1,
  .smember--style2,
  .smember--style3 {
    box-shadow: 0 10px 40px 0 rgba(0, 0, 0, 0.1);
  }
  .smembers {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
  }
  .smember-photo {
    text-align: center;
  }
  .smember-icon svg {
    height: 15px;
    vertical-align: middle;
    margin: 6px;
    color: #fff;
  }
  
  .smember--style1 {
    overflow: hidden;
  }
  .smember--style1 .smember-photo {
    overflow: hidden;
    position: relative;
  }
  .smember--style1 .smember-photo img {
    transition: all 0.3s cubic-bezier(0, 0, 0, 0.1);
    -webkit-transform: scale(1);
    transform: scale(1);
  }
  .smember--style1 .smember-icons {
    margin-top: 10px;
    position: absolute;
    bottom: 20px;
    background: rgba(255, 255, 255, 0.13);
    text-align: center;
    padding: 6px 16px;
  }
  .smember--style1 .smember-icons:before {
    content: "";
    position: absolute;
    right: -200%;
    height: 1px;
    width: 200%;
    background: rgba(255, 255, 255, 0.13);
    top: 50%;
  }
  .smember--style1 .smember-info {
    padding: 25px 20px;
  }
  .smember--style1 .smember-name {
    font-size: 18px;
    margin: 0;
  }
  .smember--style1 span.smember-role {
    font-size: 12px;
    color: #999;
    display: block;
  }
  .smember--style1:hover .smember-photo img {
    -webkit-transform: scale(1.1);
    transform: scale(1.1);
  }
  .smember--style2 {
    -webkit-transform: translateY(0);
    transform: translateY(0);
    -webkit-transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
    transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
  }
  .smember--style2 .smember-photo {
    position: relative;
  }
  .smember--style2 .smember-icons {
    position: absolute;
    top: 0;
    text-align: center;
    width: 40px;
    padding: 10px 0;
    left: -7px;
  }
  .smember--style2 .smember-icons:before {
    content: "";
    position: absolute;
    left: -7px;
    bottom: -7px;
    border: 7px solid transparent;
  }
  .smember--style2 .smember-info {
    padding: 20px;
  }
  .smember--style2 .smember-name {
    font-size: 18px;
    margin: 0;
    position: relative;
    padding-bottom: 3px;
  }
  .smember--style2 .smember-name:before {
    content: "";
    position: absolute;
    right: 0;
    height: 1px;
    width: 30px;
    background: #000;
    bottom: 0;
  }
  .smember--style4 .smember-icon,
  .smember--style5 .smember-icon,
  .smember--style6 .smember-icon {
    height: 30px;
    line-height: 30px;
    text-align: center;
  }
  .smember--style2 span.smember-role {
    font-size: 12px;
    color: #999;
    display: block;
  }
  .smember--style2:hover {
    -webkit-transform: translateY(-10px);
    transform: translateY(-10px);
  }
  .smember--style3 {
    -webkit-transform: translateY(0);
    transform: translateY(0);
    -webkit-transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
    transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
  }
  .smember--style3 .smember-photo {
    position: relative;
  }
  .smember--style3 .smember-icons {
    position: absolute;
    bottom: 0;
    background: rgba(255, 255, 255, 0.1);
    width: 100%;
    padding: 7px 10px;
    left: 0;
  }
  .smember--style3 .smember-info {
    padding: 20px;
  }
  .smember--style3 .smember-name {
    font-size: 18px;
    margin: 0;
  }
  .smember--style3 span.smember-role {
    font-size: 12px;
    color: #999;
    display: block;
  }
  .smember--style3:hover {
    -webkit-transform: translateY(-10px);
    transform: translateY(-10px);
  }
  .smember--style3 .smember-icon i:hover {
    background: #fff;
    color: #444;
  }
  .smember--style4 {
    position: relative;
    -webkit-transform: translateY(0);
    transform: translateY(0);
    -webkit-transition: all 0.15s cubic-bezier(0, 0, 0, 0.1);
    transition: all 0.15s cubic-bezier(0, 0, 0, 0.1);
    margin-bottom: 51px;
  }
  .smember--style4 .smember-icons {
    position: absolute;
    top: 100%;
    padding: 12px 15px;
    right: 0;
    width: 100%;
    -webkit-box-shadow: 0 10px 40px 0 rgba(0, 0, 0, 0.08);
    box-shadow: 0 10px 40px 0 rgba(0, 0, 0, 0.08);
  }
  .smember--style4 .smember-info {
    padding: 8px 20px;
    position: absolute;
    bottom: 0;
    width: 100%;
    color: #fff;
    background: rgba(255, 255, 255, 0.02);
  }
  .smember--style4 .smember-name {
    font-size: 18px;
    margin: 0;
    color: #fff;
  }
  .smember--style4 span.smember-role {
    font-size: 12px;
    color: #fff;
    display: block;
  }
  .smember--style4:hover {
    -webkit-transform: translateY(-10px);
    transform: translateY(-10px);
  }
  .smember--style4 .smember-icon {
    margin: 0 2px;
    display: inline-block;
    border: 1px solid rgba(0, 0, 0, 0.18);
    width: 30px;
  }
  .smember--style4 .smember-icon svg {
    color: #000;
    -webkit-transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
    transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
  }
  .smember--style5 {
    position: relative;
    -webkit-transform: translateY(0);
    transform: translateY(0);
    -webkit-transition: all 0.15s cubic-bezier(0, 0, 0, 0.1);
    transition: all 0.15s cubic-bezier(0, 0, 0, 0.1);
    margin-bottom: 51px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.03);
  }
  .smember--style5 .smember-icons {
    position: absolute;
    top: 100%;
    padding: 12px 15px;
    right: 0;
    width: 100%;
    -webkit-box-shadow: 0 10px 40px 0 rgba(0, 0, 0, 0.08);
    box-shadow: 0 10px 40px 0 rgba(0, 0, 0, 0.08);
  }
  .smember--style5 .smember-info {
    padding: 15px 20px 11px;
    background: #fff;
  }
  .smember--style5 .smember-name {
    font-size: 16px;
    margin: 0;
  }
  .smember--style5 span.smember-role {
    font-size: 12px;
    display: block;
  }
  .smember--style5:hover {
    -webkit-transform: translateY(-10px);
    transform: translateY(-10px);
  }
  .smember--style5 .smember-icon:hover svg {
    color: #fff !important;
  }
  .smember--style5 .smember-icon {
    margin: 0 2px;
    display: inline-block;
    width: 30px;
    -webkit-transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
    transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
    border-radius: 50%;
  }
  .smember--style5 .smember-icon svg {
    -webkit-transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
    transition: all 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
  }
  .smember--style6 {
    position: relative;
    border: 1px solid rgba(0, 0, 0, 0.08);
    background: #fff;
    padding: 15px;
    text-align:center;
  }
  .smember--style6 .smember-photo {
    overflow: hidden;
    position: relative;
  }
  .smember--style6 .smember-photo img {
    -transition: all 0.3s cubic-bezier(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0, 0, 0, 0.1);
    -webkit-transform: scale(1);
    transform: scale(1);
  }
  .smember--style6 .smember-icons {
    position: absolute;
    top: -1px;
    right: 0;
    width: 30px;
  }
  .smember--style6 .smember-icons a:nth-child(1) {
    -webkit-transition-delay: 0.2s;
    transition-delay: 0.2s;
  }
  .smember--style6 .smember-icons a:nth-child(2) {
    -webkit-transition-delay: 0.3s;
    transition-delay: 0.3s;
  }
  .smember--style6 .smember-icons a:nth-child(3) {
    -webkit-transition-delay: 0.4s;
    transition-delay: 0.4s;
  }
  .smember--style6 .smember-icons a:nth-child(4) {
    -webkit-transition-delay: 0.5s;
    transition-delay: 0.5s;
  }
  .smember--style6 .smember-info {
    padding-top: 15px;
    background: #fff;
  }
  .smember--style6 .smember-name {
    font-size: 20px;
    margin: 0;
    line-height: normal;
  }
  .smember--style6 span.smember-role {
    font-size: 12px;
    display: block;
  }
  .smember--style6:hover .smember-photo img {
    -webkit-transform: scale(1.1);
    transform: scale(1.1);
  }
  .smember--style6 .smember-icon {
    -webkit-transform: translateX(50px);
    transform: translateX(50px);
    -webkit-transition: -webkit-transform 0.3s cubic-bezier(0, 0, 0, 0.2),
      transform 0.3s cubic-bezier(0, 0, 0, 0.2);
    transition: -webkit-transform 0.3s cubic-bezier(0, 0, 0, 0.2),
      transform 0.3s cubic-bezier(0, 0, 0, 0.2);
    width: 30px;
    margin-bottom: 2px;
    display: inline-block;
  }
  .smember--style6:hover .smember-icon {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }
  
{% endstyle %}

