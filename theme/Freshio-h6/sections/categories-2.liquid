<!-- categories-2.liquid -->
<div class="customstyle{{ section.id }}" data-aos="{{section.settings.animation}}">
    {%- include 'style-section' -%}
<div class="{{ section.settings.setwidth }}">
  <div class="section-block section-inner">
    {%- include 'section-heading' -%}
    <div class="category-wrapper dots-negative">
      {%- if section.settings.rows == '2' -%}
      {%- assign slidesToShow = section.blocks.size | divided_by:2 -%}
      {%- else -%}
      {%- assign slidesToShow = section.blocks.size -%}
      {%- endif -%}
      <div class="category-slider row mx-0" id="collection-list-{{ section.id }}"
           data-rows="{{section.settings.rows}}"
           data-slidesToShow="{{slidesToShow}}"
           data-slidestoscroll="1"
           data-arrows="{{ section.settings.arrows }}"
           data-dots="{{ section.settings.dots }}" 
           data-draggable="{{ section.settings.draggable }}" 
           data-infinite="{{ section.settings.infinite }}" 
           data-section-id="{{ section.id }}" 
           data-section-type="slickCarousels">
        {%- for block in section.blocks -%}
        {%- assign collection = collections[block.settings.collection] -%}
        <div class="col px-0 d-block category-item-2 carousel__slide-wrapper--{{block.id}}" {{ block.shopify_attributes }}>
          <div class="media border py-3">
            <div class="{% if section.settings.image_left %}order-1 pr-3{% else %}pl-3{% endif %} media-body align-self-center">
              <h6 class=" text-capitalize " style="color:{{section.settings.title_cl}}">
                {% if block.settings.title != blank %}
                	{{block.settings.title }}
                {% else %}
                	{{collection.title | default: 'Collection title' }}
                {% endif %}
              </h6>
              <span class="small" style="color:{{section.settings.list_cl}};">
                ( {{ collection.products_count | default: 0 }} {{ collection.products_count | pluralize: 'product', 'products' }} )
              </span>
            </div>

            <a href="{{collection.url | default: '/collections/all'}}" class="media-image pl-2 pr-3">
              {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url:'200x' }}" />
              {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </a>
          </div>
        </div>
        {%- endfor -%}
      </div>
    </div>
    {%- if section.blocks.size == 0 -%}
    {%- include 'no-blocks' -%}
    {%- endif -%}
  </div>
</div>
</div>

<style>
  .category-slider .slick-track{
    padding-top:1px;
  }
  .category-item-2 {
    margin-top:-1px
  }

  @media (min-width:1400px){
    .category-slider .slick-slide + .slick-slide{
      margin-left:-1px
    }
  }
  .category-item-2 .media-image{
    max-width: 85px;
  }
  .category-item-2 .media.border{
      border-color: {{section.settings.bd_cl}} !important;
  }
  .category-item-2 .media-image img{
    -webkit-transition: all ease .45s;
    -o-transition: all ease .45s;
    transition: all ease .45s
  }

  .category-item-2 .media-image:hover img{
    -webkit-filter: grayscale(.9);
    filter: grayscale(.9);
  }

</style>

