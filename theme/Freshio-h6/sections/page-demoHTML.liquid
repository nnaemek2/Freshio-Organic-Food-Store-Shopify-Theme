{%- capture uniqueID -%}{{ 'now' | date: "%N" }}{%- endcapture -%}

<!-- Main box -->
<div class="mainbox-wrap">
  <div class="html-contents">
    <div class="html-item">
      <div class="row">
        <div class="col-12 col-left">
          <div class="container">
            <textarea id="htmlCode-Mainbox" name="message" class="html-code"></textarea>
          </div>
        </div>
        <div class="col-12 col-mid-main">
          <div class="container">
            <button class="btn btn-danger btn-html-view" data-id="Mainbox">Try view {% include 'icon-arrow-down' %}</button>
            <button class="btn btn-outline-danger" id="js-formatCode">Beautiful Code {% include 'icon-idea' %}</button>
            <button class="btn btn-success btn-html-copy" data-id="Mainbox">Copy to clipboard {% include 'icon-copy' %}</button>
            <button class="btn btn-outline-secondary btn-html-copy float-right" id="js-downloadCode">Save as *.html {% include 'icon-download' %}</button>
          </div>
        </div>
        <div class="col-12 col-right">
          <div id="htmlView-Mainbox" class="html-view">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="section-demoHTML">
  <div class="html-contents">
    {%- include 'htmlbuilder-layout' -%}

    <h3 class="html-title mt-5 mb-5">2. Build elements</h3>

    {%- include 'htmlbuilder-text' -%}
    {%- include 'htmlbuilder-divided' -%}
    {%- include 'htmlbuilder-banner' -%}
    {%- include 'htmlbuilder-snippet' -%}

    <h3 id="html-dynamic" class="html-title pt-3 mt-5 mb-5"># Other components</h3>
    {%- for block in section.blocks -%}
    <div class="html-item" {{ block.shopify_attributes }}>
      <h4 id="html-{{block.id}}" class="html-title">{{block.settings.title}}</h4>
      {%- if block.settings.info != blank -%}
      <p class="py-2">
        {{block.settings.info}}
      </p>
      {%- endif -%}
      <div class="row no-gutters">
        <div class="col-md-7 col-left">
          <textarea id="htmlCode-{{block.id}}" class="html-code">{{block.settings.html}}</textarea>
        </div>
        <div class="col-md-2 col-mid">
          <button class="btn btn-outline-secondary btn-html-view" data-id="{{block.id}}">Preview{%- include 'icon-arrow-right' -%}</button>
          <button class="btn btn-secondary btn-html-copy" data-id="{{block.id}}">Copy {%- include 'icon-copy' -%}</button>
        </div>
        <div class="col-md-3 col-right">
          <div id="htmlView-{{block.id}}" class="html-view shadow">
            {{block.settings.html}}
          </div>
        </div>
      </div>
    </div>
    <hr />
    {%- endfor -%}

    {%- include 'htmlbuilder-icon' -%}
    {%- include 'htmlbuilder-howthisworks' -%}
  </div>
</div>

