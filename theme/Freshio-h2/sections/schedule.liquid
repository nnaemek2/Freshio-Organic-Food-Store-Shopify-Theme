<!-- schedule.liquid -->
<div class="customstyle{{ section.id }}" data-aos="{{section.settings.animation}}">
<div class="{{ section.settings.setwidth }}">
  {%- include 'style-section' -%}
  <div class="section-block" >
    {%- include 'section-heading' -%}
    {%- for block in section.blocks -%}
    <div class="row mb-4">
      <div class="col-lg-3">
        <div class="js-stick-parent">
          <div class="schedule-day bg-theme gradient-theme p-5 text-right text-white position-relative font-family-2">
            <h2 class="text-white m-0">{{ block.settings.title }}</h2>
            <p>{{ block.settings.des }}</p>
          </div>
        </div>
      </div>
      <div class="col-lg-9" {{ block.shopify_attributes }}>
        {%- for i in (1..6) -%}
        {%- assign sContent = 'content' | append: i -%}
        {%- assign sInfo = 'info' | append: i -%}
        {%- assign sTime = 'time' | append: i -%}
        {%- assign sRoom = 'room' | append: i -%}
        {%- assign sPeople = 'people' | append: i -%}
          {%- if block.settings[sContent] != blank -%}
          <div class="schedule-speaker p-3 p-md-5 bg-theme-50">
            <div class="media flex-column flex-sm-row">
              <div class="media-meta fz-n3 order-1 order-sm-0">
                {%- if block.settings[sTime] != blank -%}
                <div class="schedule-time">
