<!-- brand-carousel.liquid -->
<style>
  .brand-item{
    text-align: center;
  }
  .brand-item a{
    display: inline-block;
    color: var(--g-color-heading);
  }
  .brand-item.svglink a{
    display: block;
  }
  .brand-item .brand-link{
    opacity: 0.4;
    transition: all 0.3s cubic-bezier(0.22, 0.61, 0.36, 1);
  }
  .brand-item:hover .brand-link{
    opacity: 1;
  }
  .brand-item .logo-svg svg{
    width: 100%;
    height: auto;
  }
</style>
<div class="customstyle{{ section.id }} " data-aos="{{section.settings.animation}}" >
  {%- include 'style-section' -%}
  <div class="{{ section.settings.setwidth }}">
    <div class="section-block section-inner">
      {%- include 'section-heading' -%}
      <div class="brand-wrapper dots-negative">
        <div class="brand-slider row mb-0" id="collection-list-{{ section.id }}"
            data-rows="{{section.settings.rows}}"
            data-slidesToShow="{{section.settings.slidestoshow}}"
            data-slidestoscroll="{{section.settings.slidescroll}}"
            data-arrows="{{ section.settings.arrows }}"
            data-dots="{{ section.settings.dots }}" 
            data-draggable="{{ section.settings.draggable }}" 
            data-infinite="{{ section.settings.infinite }}" 
            data-section-id="{{ section.id }}" 
            data-section-type="slickCarousels">
          {%- for block in section.blocks -%}
          <div class="col brand-item carousel__slide-wrapper--{{block.id}} {{block.settings.type_logo}}" {{ block.shopify_attributes }}>
            <a href="{{block.settings.link | default:'#'}}" class="brand-link {% if section.settings.grayscale %} hv-image-grayscale {% endif %}">
              {% if block.settings.type_logo  == 'image' %}
                {%- if block.settings.image != blank -%}
                <img class="lazyload transition mx-auto" src="{% include 'srcBlank' %}" data-src="{{ block.settings.image | img_url: '400x' }}" alt="{{ block.settings.image.alt }}" style="width: {{section.settings.width_image}}%;">
                {%- else -%}
                <div class="image-block__image">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
                {%- endif -%}
              {%- elsif block.settings.type_logo  == 'svgcode' -%}
                {%- if block.settings.svg_code != blank -%}
                <div class="logo-svg mx-auto" style="width: {{section.settings.width_image}}%;">
                  {{block.settings.svg_code}}
                </div>
                {%- else -%}
                <div class="image-block__image">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
                {%- endif -%}
              {%- elsif block.settings.type_logo  == 'svglink' -%}
                  {%- if block.settings.svg_link != blank -%}
                  <img class="lazyload transition mx-auto" src="{% include 'srcBlank' %}" data-src="{{ block.settings.svg_link }}" alt="{{ block.settings.image.alt }}" style="width: {{section.settings.width_image}}%;">
                {%- else -%}
                <div class="image-block__image">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
                {%- endif -%}
              {%- endif -%}
            </a>
          </div>
          {%- endfor -%}
        </div>
      </div>
      {%- if section.blocks.size == 0 -%}
      {%- include 'no-blocks' -%}
      {%- endif -%}
    </div>
  </div>
</div>

